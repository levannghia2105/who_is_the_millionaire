<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Bạn đã trả lời sai đáp án của chương trình bạn sẽ ra về mới mốc tiền thưởng là : "
        android:textColor="#FF0000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_money"
        android:text="Nhập tên:"
        android:layout_marginTop="20dp"

        android:textColor="#FF0000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edt_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_money"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/txt_Name"
        android:hint="nhập vào tên của mình"
        android:textColor="#FF0000"
        android:textSize="20sp" />


    <Button

        android:id="@+id/btn_Backmenu"
        android:background="@drawable/custom_textview"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_Name"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"

        android:text="Quay Lại " />

    <Button

        android:id="@+id/btn_Savescore"
        android:background="@drawable/custom_textview"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_Name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/btn_Backmenu"

        android:text="Lưu điểm "

        />

</RelativeLayout>